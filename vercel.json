{
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.([0-9a-f]+)\\.(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(audio|data|img)/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=604800"
        }
      ]
    }
  ]
}

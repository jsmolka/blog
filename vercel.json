{
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)\\.(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.(html|xml)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|jpg|png|mp3|woff2)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
